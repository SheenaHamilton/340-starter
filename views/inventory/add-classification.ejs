<% if (title) { %>
    <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

<p>To add a new vehicle classification to the system please fill in the following form: </p>
<form id="addClassification" action="/inv/classification" method="post">
    <div id='classificationDetails'>
        <label class='top' for="classification_name">Classification Name</label>
        <ul><li>Alphanumeric values only</li>
            <li>No spaces</li>
        </ul>
        <input type='text' id='classification_name' name='classification_name' pattern="^[a-zA-Z0-9]+$" required >
        <input class='button' type='submit' id='add' value='Add Classification'>
    </div>
</form>
