<% if (title) { %>
    <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class='notice'>
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>
<div id="add">
    <h2>Add New Inventory</h2>
    <ul class='listButtons'>
        <li><a class='button' href='/inv/classification'>Add New Classification</a></li>
        <li><a  class='button' href='/inv/inventory'>Add New Inventory</a></li>
    </ul>
</div>
<div id="manage">
    <h2>Manage Inventory</h2>
    <p>Please select a classification from the list to view the vehicles: </p>
    <%- classifications %>
    <table id="inventoryDisplay"></table>
    <noscript>JavaScript must be enabled to use this page.</noscript>
</div>
<script src="../../js/inventory.js"></script>