<% if (title) { %>
    <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class='notice'>
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

<p>Please confirm the vehicle to be deleted</p>
<p>Note: The delete is permanent.</p>
<form id='editInventory' action='/inv/delete' method='post'>
    <div id='inventoryDetails'>

        <label class='top' for='inv_make'>Make</label>
        <input type='text' id='inv_make' name='inv_make' readonly value='<%= inv_make %>'>

        <label class='top' for='inv_model'>Model</label>
        <input type='text' id='inv_model' name='inv_model' readonly value='<%= inv_model %>'>

        <label class='top' for='inv_year'>Year</label>
        <input type='text' id='inv_year' name='inv_year' placeholder='YYYY' pattern='^(19|20)\d{2}$' readonly value='<%= inv_year %>'>
  
        <label class='top' for='inv_price'>Price</label>
        <input class='numbers' type='number' id='inv_price' name='inv_price' min='1' step='any' readonly value='<%= inv_price %>'>   

        <input class='button' type='submit' id='add' value='Delete Vehicle'>

        <input type="hidden" name="inv_id" value="<%= inv_id %>">
    </div>
</form>
